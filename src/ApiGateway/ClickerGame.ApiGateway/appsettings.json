{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "AspNetCoreRateLimit": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "74413016b8227efda87f73c6bf4217ce0c5ff5fd96d6b05e9ec36dc97cec3693ed8b41b4",
    "Issuer": "ClickerGame.Players",
    "Audience": "ClickerGame"
  },
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/health",
      "get:/api/gateway/health",
      "get:/api/gateway/routes",
      "get:/gameHub/negotiate"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/players/register",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "*/api/players/login",
        "Period": "15m",
        "Limit": 10
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "*/api/game/session",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*/gameHub/negotiate",
        "Period": "5m",
        "Limit": 10
      }
    ],
    "WebSocketRules": [
      {
        "Endpoint": "*/gameHub",
        "Period": "1h",
        "Limit": 5,
        "Description": "Limit WebSocket connections per hour"
      },
      {
        "Endpoint": "*/gameHub",
        "Period": "1d",
        "Limit": 50,
        "Description": "Daily WebSocket connection limit"
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [
      "get:/health",
      "get:/api/gateway/health",
      "get:/gameHub/negotiate"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1s",
        "Limit": 50
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 2000
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "players-route": {
        "ClusterId": "players-cluster",
        "Match": {
          "Path": "/api/players/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/players/{**catch-all}"
          }
        ]
      },
      "upgrades-route": {
        "ClusterId": "upgrades-cluster",
        "Match": {
          "Path": "/api/upgrades/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/upgrades/{**catch-all}"
          }
        ]
      },
      "gamecore-signalr-websocket": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/gameHub/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/gameHub/{**catch-all}"
          }
        ],
        "Metadata": {
          "websocket.enabled": "true",
          "websocket.subprotocols": "signalr",
          "timeout": "300",
          "retry.policy": "exponential"
        }
      },
      "gamecore-signalr-negotiate": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/gameHub/negotiate"
        },
        "Transforms": [
          {
            "PathPattern": "/gameHub/negotiate"
          }
        ],
        "Metadata": {
          "priority": "100"
        }
      },
      "gamecore-js-files": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/js/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/js/{**catch-all}"
          }
        ]
      },
      "gamecore-api": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/api/game/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/game/{**catch-all}"
          }
        ]
      },
      "gamecore-telemetry": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/api/signalr/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/signalr/{**catch-all}"
          }
        ]
      },
      "health-players": {
        "ClusterId": "players-cluster",
        "Match": {
          "Path": "/health/players"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "health-gamecore": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/health/gamecore"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "health-upgrades": {
        "ClusterId": "upgrades-cluster",
        "Match": {
          "Path": "/health/upgrades"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      }
    },
    "Clusters": {
      "players-cluster": {
        "Destinations": {
          "players-service": {
            "Address": "http://players-service/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "gamecore-cluster": {
        "Destinations": {
          "gamecore-service": {
            "Address": "http://gamecore-service:80"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "SessionAffinity": {
          "Enabled": "true",
          "Policy": "Cookie",
          "AffinityKeyName": "GameCoreAffinity",
          "Cookie": {
            "Domain": "",
            "Expiration": "01:00:00",
            "HttpOnly": "true",
            "IsEssential": "true",
            "MaxAge": "01:00:00",
            "Path": "/",
            "SameSite": "Strict",
            "SecurePolicy": "SameAsRequest"
          }
        }
      },
      "upgrades-cluster": {
        "Destinations": {
          "upgrades-service": {
            "Address": "http://upgrades-service:80"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "WebSocketProxying": {
    "EnableWebSocketProxying": true,
    "KeepAliveInterval": "00:00:30",
    "CloseTimeout": "00:00:10",
    "SubProtocols": [ "signalr" ],
    "BufferSize": 4096,
    "MaxMessageSize": 32768,
    "LogLevel": "Information"
  }
}