{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "AspNetCoreRateLimit": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "74413016b8227efda87f73c6bf4217ce0c5ff5fd96d6b05e9ec36dc97cec3693ed8b41b4",
    "Issuer": "ClickerGame.Players",
    "Audience": "ClickerGame"
  },
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/health",
      "get:/api/gateway/health",
      "get:/api/gateway/routes"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/players/register",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "*/api/players/login",
        "Period": "15m",
        "Limit": 10
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "*/api/game/session",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [
      "get:/health",
      "get:/api/gateway/health"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1s",
        "Limit": 50
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 2000
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "players-route": {
        "ClusterId": "players-cluster",
        "Match": {
          "Path": "/api/players/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/players/{**catch-all}"
          }
        ]
      },
      "gamecore-route": {
        "ClusterId": "gamecore-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/game/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/game/{**catch-all}"
          }
        ]
      },
      "health-players": {
        "ClusterId": "players-cluster",
        "Match": {
          "Path": "/health/players"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "health-gamecore": {
        "ClusterId": "gamecore-cluster",
        "Match": {
          "Path": "/health/gamecore"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      }
    },
    "Clusters": {
      "players-cluster": {
        "Destinations": {
          "players-service": {
            "Address": "http://players-service/"
          }
        }
      },
      "gamecore-cluster": {
        "Destinations": {
          "gamecore-service": {
            "Address": "http://gamecore-service/"
          }
        }
      }
    }
  }
}