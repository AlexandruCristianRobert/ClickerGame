{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug",
      "AspNetCoreRateLimit": "Debug"
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "IpRateLimiting": {
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "*/api/players/register",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "*/api/players/login",
        "Period": "15m",
        "Limit": 20
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 5000
      }
    ]
  },
  "ClientRateLimiting": {
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 2000
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1s",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/game/click",
        "Period": "1m",
        "Limit": 10000
      }
    ]
  },
  "ReverseProxy": {
    "Clusters": {
      "players-cluster": {
        "Destinations": {
          "players-service": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "gamecore-cluster": {
        "Destinations": {
          "gamecore-service": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  }
}